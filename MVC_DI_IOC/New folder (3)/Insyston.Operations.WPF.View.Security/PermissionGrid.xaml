        <Style x:Key="GridViewRowStyle"
               TargetType="{x:Type telerik:GridViewRow}">
            <Setter Property="IsTabStop"
                    Value="False" />
            <Setter Property="Template"
                    Value="{StaticResource GridViewRowTemplate}" />
            <Setter Property="Background"
                    Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2},Path=DataContext.GridStyle}" />
            <Setter Property="BorderBrush"
                    Value="Gray" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="MinHeight"
                    Value="25" />
            <Setter Property="FontWeight"
                    Value="Normal" />
            <Setter Property="VerticalContentAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="SnapsToDevicePixels"
                    Value="True" />

        </Style>

    </UserControl.Resources>

    <Grid x:Name="PermissionsGrid" Margin="0,0,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="25"/>-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="800"/>
        </Grid.ColumnDefinitions>

        <!--<TextBlock Grid.ColumnSpan="4" Grid.Row="0" Text="Permissions" Style="{StaticResource HeaderTextBlock}"/>
        <Border Grid.ColumnSpan="4" Grid.Row="1" BorderBrush="#FFA1A1A1" BorderThickness="1"/>-->

        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource SectionBorderStyle}" DockPanel.Dock="Top" VerticalAlignment="Stretch">
            <DockPanel VerticalAlignment="Stretch" Background="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2},Path=DataContext.GridStyle}">
                <TextBlock Text="Area" DockPanel.Dock="Top" Style="{StaticResource SectionHeaderBlock}" />
                <telerik:RadTreeView x:Name="ComponentsRadTreeView" DockPanel.Dock="Top" SelectionMode="Single" IsSingleExpandPath="False" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     SelectedItem="{Binding SelectedComponent, Mode=TwoWay}" ItemsSource="{Binding Components}" telerik:TextSearch.TextPath="DisplayName" ItemContainerStyle="{StaticResource ComponentItemContainerStyle}"                                      
                                     ItemTemplate="{StaticResource AreaTemplate}">
                </telerik:RadTreeView>
            </DockPanel>
        </Border>

        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource SectionBorderStyle}" HorizontalAlignment="Stretch" Visibility="{Binding IsComponentSelected, Converter={StaticResource boolToVisibility}}">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock DockPanel.Dock="Top" Grid.Column="2" Grid.Row="4" Text="Permissions" Style="{StaticResource SectionHeaderBlock}" />
                <Grid Grid.Row="4" Grid.Column="2" DataContext="{Binding SelectedComponent}" DockPanel.Dock="Top" Loaded="Grid_Loaded">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" VerticalAlignment="Top" IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="55"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6"></ColumnDefinition>
                            <ColumnDefinition Width="59"></ColumnDefinition>
                            <ColumnDefinition Width="190"></ColumnDefinition>
                            <ColumnDefinition Width="76"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <RadioButton Content="All" x:Name="AllRadioButton" Grid.Column="1" Grid.Row="0" FontWeight="Normal"  VerticalAlignment="Center"
                                     Visibility="{Binding Name, Converter={StaticResource enumToVisibility}, ConverterParameter=System}"
                                     IsChecked="{Binding Path=IsAddIsDeletePermissionOption,Mode=TwoWay,Converter={StaticResource enumToBoolean}, 
                            ConverterParameter={x:Static enums:PermissionOption.All}}" GroupName="AllSelectedIsAddIsDeleteOption">
                        </RadioButton>

                        <RadioButton Content="Selected" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" FontWeight="Normal"  VerticalAlignment="Center"
                                     Visibility="{Binding Name, Converter={StaticResource enumToVisibility}, ConverterParameter=System}"
                                     IsChecked="{Binding Path=IsAddIsDeletePermissionOption, Mode=TwoWay, Converter={StaticResource enumToBoolean}, 
                            ConverterParameter={x:Static enums:PermissionOption.Selected}}" GroupName="AllSelectedIsAddIsDeleteOption">
                        </RadioButton>

                        <CheckBox Content="Add"  Grid.Column="3" Grid.Row="0" IsChecked="{Binding IsAdd, Mode=TwoWay}" VerticalAlignment="Center"
                                  Visibility="{Binding HasAdd, Converter={StaticResource boolToVisibility}}"
                                  IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}" />
                        <CheckBox Content="Delete"  Grid.Column="4" Grid.Row="0" IsChecked="{Binding IsDelete, Mode=TwoWay}" VerticalAlignment="Center"
                                  IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}"
                                  Visibility="{Binding HasDelete, Converter={StaticResource boolToVisibility}}" />
                    </Grid>
                    <telerik:RadGridView  ItemsSource="{Binding Forms}" VerticalAlignment="Stretch" Grid.Row="1" HorizontalAlignment="Stretch" GridLinesVisibility="None" RowIndicatorVisibility="Collapsed"
                                         Background="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2},Path=DataContext.GridStyle}" AutoGenerateColumns="False" ShowColumnFooters="False" IsFilteringAllowed="False" BorderThickness="0" RowStyle="{StaticResource GridViewRowStyle}" 
                                         CanUserFreezeColumns="False" CanUserDeleteRows="False" CanUserInsertRows="False" CanUserReorderColumns="False" EnableColumnVirtualization="False"
                                         CanUserSortColumns="False" ShowGroupPanel="False" Name="grdPermissions" >
                        <telerik:RadGridView.Resources>
                            <Style TargetType="telerik:GridViewCell" x:Key="cellStyle">
                                <!--<Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2},Path=DataContext.GridStyle}"></Setter>
                                <Setter Property="BorderBrush" Value="White"></Setter>-->
                                <Setter Property="BorderThickness" Value="0"></Setter>
                                <Setter Property="Focusable" Value="False" />
                                
                                
                            </Style>
                            <Style TargetType="telerik:GridViewHeaderCell" x:Key="HeaderFirstColumn">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="telerik:GridViewHeaderCell">
                                            <WrapPanel VerticalAlignment="Bottom" Margin="0,0,0,5" 
                                                       IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                                <RadioButton Content="All" x:Name="AllRadioButton" Margin="5, 0, 25, 0" FontWeight="Normal" 
                                                             IsChecked="{Binding Path=DataContext.ActiveViewModel.SelectedComponentPermissionOption, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                                                             Converter={StaticResource enumToBoolean}, ConverterParameter={x:Static enums:PermissionOption.All}}"  GroupName="AllSelectedOption"/>
                                                <RadioButton Content="Selected" Width="70" HorizontalAlignment="Left" FontWeight="Normal" 
                                                             IsChecked="{Binding Path=DataContext.ActiveViewModel.SelectedComponentPermissionOption, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                                                             Converter={StaticResource enumToBoolean}, ConverterParameter={x:Static enums:PermissionOption.Selected}}" GroupName="AllSelectedOption"/>
                                            </WrapPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="telerik:GridViewHeaderCell" x:Key="HeaderSecondColumn">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="telerik:GridViewHeaderCell">
                                            <StackPanel Orientation="Vertical" Margin="5,0,0,0"
                                                        IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                                <TextBlock Text="View" HorizontalAlignment="Left" TextAlignment="Left" Margin="0, 0, 0, 10" FontWeight="Normal" ></TextBlock>
                                                <RadioButton HorizontalAlignment="Left" GroupName="AllSelectedType" 
                                                             Visibility="{Binding Path=DataContext.ActiveViewModel.SelectedComponentPermissionOption, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                                                             Converter={StaticResource enumToVisibility}, ConverterParameter={x:Static enums:PermissionOption.All}}"                                                              
                                                             IsChecked="{Binding Path=DataContext.SelectedComponent.IsViewSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                                             IsEnabled="{Binding Path=DataContext.SelectedComponent.IsViewEnabled, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="telerik:GridViewHeaderCell" x:Key="HeaderThirdColumn">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="telerik:GridViewHeaderCell">
                                            <StackPanel Orientation="Vertical" Margin="5,0,0,0" 
                                                        IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                                <TextBlock Text="Edit" HorizontalAlignment="Left" TextAlignment="Left" Margin="0, 0, 0, 10" FontWeight="Normal" ></TextBlock>
                                                <RadioButton HorizontalAlignment="Left" GroupName="AllSelectedType" 
                                                             IsChecked="{Binding Path=DataContext.SelectedComponent.AllPermissionType, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl},
                                                             Converter={StaticResource enumToBoolean}, ConverterParameter={x:Static enums:PermissionType.Edit}}" 
                                                             Visibility="{Binding Path=DataContext.ActiveViewModel.SelectedComponentPermissionOption, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                                                             Converter={StaticResource enumToVisibility}, ConverterParameter={x:Static enums:PermissionOption.All}}"  />
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="telerik:GridViewHeaderCell" x:Key="HeaderFourthColumn">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="telerik:GridViewHeaderCell">
                                            <StackPanel Orientation="Vertical" Margin="5,0,0,0" 
                                                        IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                                <TextBlock Text="None" HorizontalAlignment="Left" TextAlignment="Left" Margin="0, 0, 0, 10" FontWeight="Normal" ></TextBlock>
                                                <RadioButton HorizontalAlignment="Left" GroupName="AllSelectedType" 
                                                             Visibility="{Binding Path=DataContext.ActiveViewModel.SelectedComponentPermissionOption, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                                                             Converter={StaticResource enumToVisibility}, ConverterParameter={x:Static enums:PermissionOption.All}}" 
                                                             IsChecked="{Binding Path=DataContext.SelectedComponent.IsNoneSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" 
                                                             IsEnabled="{Binding Path=DataContext.SelectedComponent.IsNoneEnabled, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="telerik:GridViewHeaderCell" x:Key="HeaderLastColumn">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="telerik:GridViewHeaderCell">
                                            <TextBlock Text="Source" HorizontalAlignment="Left" Width="Auto" VerticalAlignment="Top" TextAlignment="Left" FontWeight="Normal" ></TextBlock>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </telerik:RadGridView.Resources>
                        <telerik:RadGridView.HeaderRowStyle>
                            <Style TargetType="telerik:GridViewHeaderRow">
                                <Setter Property="Padding" Value="28,0,0,0" />
                                <Setter Property="Height" Value="45"></Setter>
                                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=2},Path=DataContext.GridStyle}"></Setter>
                                <!--<Setter Property="BorderBrush" Value="White"></Setter>-->
                                <Setter Property="BorderThickness" Value="0"></Setter>
                            </Style>
                        </telerik:RadGridView.HeaderRowStyle>
                        <telerik:RadGridView.Columns >
                            <telerik:GridViewColumn Width="250" CellStyle="{StaticResource cellStyle}" IsReadOnly="True" HeaderCellStyle="{StaticResource HeaderFirstColumn}"
                                                    IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Stretch"
                                                   HorizontalAlignment="Stretch"
                                                   Margin="0 0 0 2" />
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                            <telerik:GridViewColumn Width="75" CellStyle="{StaticResource cellStyle}" IsReadOnly="True" HeaderCellStyle="{StaticResource HeaderSecondColumn}">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                            <RadioButton IsChecked="{Binding IsViewSelected,Mode=TwoWay}" HorizontalAlignment="Left" IsEnabled="{Binding IsViewEnabled}" />
                                        </WrapPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                            <telerik:GridViewColumn Width="75" CellStyle="{StaticResource cellStyle}" IsReadOnly="True" HeaderCellStyle="{StaticResource HeaderThirdColumn}">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                            <RadioButton IsChecked="{Binding IsEditSelected,Mode=TwoWay}" HorizontalAlignment="Left"  />
                                        </WrapPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                            <telerik:GridViewColumn  Width="75" CellStyle="{StaticResource cellStyle}" IsReadOnly="True" HeaderCellStyle="{StaticResource HeaderFourthColumn}">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3}, Path=DataContext.ActiveViewModel.IsCheckedOut}">
                                            <RadioButton IsChecked="{Binding IsNoneSelected,Mode=TwoWay}" HorizontalAlignment="Left" IsEnabled="{Binding IsNoneEnabled}" />
                                        </WrapPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                            <telerik:GridViewColumn  Width="*" CellStyle="{StaticResource cellStyle}" IsReadOnly="True" HeaderCellStyle="{StaticResource HeaderLastColumn}">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Source}" VerticalAlignment="Center" Margin="0 0 0 2" />
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>
                </Grid>
            </DockPanel>
        </Border>
        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource SectionBorderStyle}" Margin="0,10,0,0"  MinHeight="100"
                IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                       Path=DataContext.ActiveViewModel.IsCheckedOut}"
                Visibility="{Binding IsVisisbleSystemOption, Converter={StaticResource boolToVisibility}}"
                >
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="59" />
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Options" Style="{StaticResource SectionHeaderBlock}"></TextBlock>

                <RadioButton Content="All" Grid.Column="0" Grid.Row="1" FontWeight="Normal" Margin="6,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                     IsChecked="{Binding IsAllSystemOption,Mode=TwoWay}"
                                     GroupName="rdbSystemOption">
                </RadioButton>

                <RadioButton Content="Selected" Grid.Column="1" Grid.Row="1" FontWeight="Normal"  HorizontalAlignment="Left" VerticalAlignment="Center"
                                     IsChecked="{Binding IsSelectSystemOption, Mode=TwoWay}"
                                     GroupName="rdbSystemOption">
                </RadioButton>

                <CheckBox Grid.Column="2" Grid.Row="1" Content="" IsChecked="{Binding IsCheckedSystemOptionPermission, Mode=TwoWay}" Visibility="{Binding IsVisibleCheckedSystemOptionPermission, Converter={StaticResource boolToVisibility}}" VerticalAlignment="Center"  ></CheckBox>
            </Grid>
        </Border>
        <Border Grid.Column="2" Grid.Row="2" Style="{StaticResource SectionBorderStyle}"  HorizontalAlignment="Stretch" Visibility="{Binding IsComponentOptionsVisible, Converter={StaticResource boolToVisibility}}" Margin="0,10,0,0">
            <DockPanel DataContext="{Binding SelectedComponent}" IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl, AncestorLevel=3},
                       Path=DataContext.ActiveViewModel.IsCheckedOut}">
                <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Options" Style="{StaticResource SectionHeaderBlock}"></TextBlock>
                </Grid>

                <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding OptionPermissions}" Margin="0 10 0 10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Name}"></TextBlock>
                                <CheckBox Grid.Column="1" 
                                          IsChecked="{Binding Flag,Mode=TwoWay}" HorizontalAlignment="Left"
                                          Visibility="{Binding Type,Converter={StaticResource enumToVisibility}, ConverterParameter={x:Static enums:OptionType.Flag}}" IsThreeState="False" />
                                <TextBox Grid.Column="1" Text="{Binding Value,Mode=TwoWay}" 
                                         Visibility="{Binding Type,Converter={StaticResource enumToVisibility}, ConverterParameter={x:Static enums:OptionType.Value}}" />
                                <StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{Binding isUserOptionPermission,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Source}"></TextBlock>
                                    <TextBlock Margin="5 0 0 0" Text="{Binding Message}"></TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
