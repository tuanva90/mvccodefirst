        </Storyboard>
    </UserControl.Resources>
    <telerik:RadBusyIndicator x:Name="BusyIndicator"
                                  BusyContent="{Binding BusyContent,
                                                        Mode=TwoWay}"
                                  DisplayAfter="00:00:00.00"
                                  IsBusy="{Binding IsBusy,
                                                   Mode=TwoWay}">
        <Grid x:Name="MainGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="GridContent" Margin="0,0,0,0">
                <Grid x:Name="Detail" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <assetCollateralClasses:AssetCollateralDetailView DataContext="{Binding AssetCollateralDetailViewModel, Mode=TwoWay}"></assetCollateralClasses:AssetCollateralDetailView>
                </Grid>
                <Grid x:Name="AssignedTo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <assetCollateralClasses:AssetCollateralTypeView DataContext="{Binding AssetCollateralTypeViewModel, Mode=TwoWay}"></assetCollateralClasses:AssetCollateralTypeView>
                </Grid>
            </Grid>
            <Grid x:Name="GridSummary"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <controls:DynamicHoverGridView
                                               x:Name="dynamicCollateralGrid"
                                               caliburn:Bind.Model="{Binding DynamicCollateralViewModel, Mode=TwoWay}"
                                               SelectedRows="{Binding SelectedRows, Mode=TwoWay}"
                                               IsEnableHoverRow="{Binding IsEnableHoverRow, Mode=TwoWay}"
                                               IsFilteringGenerate="True"></controls:DynamicHoverGridView>
            </Grid>
            <Grid x:Name="AssignFeature" Margin="0,0,0,0">
                <assetCollateralClasses:AssetCollateralAssignTypeView DataContext="{Binding AssetCollateralAssignTypeViewModel, Mode=TwoWay}"></assetCollateralClasses:AssetCollateralAssignTypeView>
            </Grid>
        </Grid>
    </telerik:RadBusyIndicator>


