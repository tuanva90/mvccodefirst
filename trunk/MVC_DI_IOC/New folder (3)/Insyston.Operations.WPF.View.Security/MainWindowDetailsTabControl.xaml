<UserControl x:Class="namespace Insyston.Operations.WPF.Views.Security.MainWindowDetailsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shell="clr-namespace:Insyston.Operations.WPF.Views.Shell"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <telerik:RadTabControl HeaderBackground="#F1F1F1">
            <telerik:RadTabItem x:Name="TabUsers" Visibility="{Binding ChangedVisibility}" Header="Users">
                <shell:MainWindowDetails DataContext="{Binding UsersMainWindowDetailsVm}"></shell:MainWindowDetails>
            </telerik:RadTabItem>
            <telerik:RadTabItem x:Name="TabGroups" Visibility="{Binding ChangedVisibility}" Header="Groups">
                <shell:MainWindowDetails DataContext="{Binding GroupsMainWindowDetailsVm}"></shell:MainWindowDetails>
            </telerik:RadTabItem>
        </telerik:RadTabControl>        
    </Grid>
</UserControl>
