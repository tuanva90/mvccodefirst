<UserControl x:Class="Insyston.Operations.WPF.ViewModels.Collections.Commands.AssignmentToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200" MinWidth="100">
    <Grid>
        <telerik:RadComboBox x:Name="cbbAssignmentFilter"  Grid.Row="1" Grid.ColumnSpan="2" DisplayMemberPath="Text" 
                             ItemsSource="{Binding ItemsAssignmentFilter,Mode= TwoWay}" 
                             SelectionChanged="RadComboBox_SelectionChanged"
                             Command="{ Binding OnUseCaseStepChanged}"
                             CommandParameter="AssignmentFilter"
                             Margin="3 1 5 1" FontWeight="Normal"/>
    </Grid>
</UserControl>
